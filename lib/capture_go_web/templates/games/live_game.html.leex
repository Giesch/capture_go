<h1><%= @game.name %> (Game #<%= @game.id %>)</h1>

<div class="columns">
  <div class="column">
    <span>
      <%= display_turn(@game.goban) %>
    </span>

    <svg style="width:1000px;height:1000px;">
      <%= nine_by_nine() %>
      <%= star_points() %>
      <%= render_stones(@game.goban) %>
    </svg>
  </div>

  <div class="column">
    <span>
      <%= display_winner(@game.goban) %>
    </span>

    <%= pass_button(@game, @current_user) %>
  </div>
</div>
